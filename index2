    <div class="card">
        <div id="timeline"></div>
        <button onclick="resetGame()">é‡æ–°é–‹å§‹</button>
    </div>

    <script>
        const data = [
            { year: "1624", event: "è·è˜­äººä½”é ˜å—éƒ¨" },
            { year: "1626", event: "è¥¿ç­ç‰™äººä½”é ˜åŒ—éƒ¨" },
            { year: "1642", event: "è·è˜­äººåŒ—ä¸Šé©…é€è¥¿ç­ç‰™äºº" },
            { year: "1652", event: "éƒ­æ‡·ä¸€äº‹ä»¶" },
            { year: "1661", event: "é„­æˆåŠŸç”±æ¾æ¹–é–‹å§‹æ”»é€²å°ç£" },
            { year: "1662", event: "é„­æˆåŠŸæ“Šæ•—è·è˜­äºº" },
            { year: "1684", event: "å°ç£æˆç‚ºæ¸…å¸åœ‹é ˜åœŸ" }
        ];

        let currentIndex = 0;

        function initGame() {
            currentIndex = 0;
            const optionsDiv = document.getElementById('options');
            const timelineDiv = document.getElementById('timeline');
            optionsDiv.innerHTML = '';
            timelineDiv.innerHTML = '';

            // éš¨æ©Ÿæ’åˆ—é¸é …
            const shuffled = [...data].sort(() => Math.random() - 0.5);
            shuffled.forEach(item => {
                const div = document.createElement('div');
                div.className = 'item';
                div.innerText = item.event;
                div.onclick = () => checkAnswer(item, div);
                optionsDiv.appendChild(div);
            });

            // å»ºç«‹æ™‚é–“è»¸ç©ºæ ¼
            data.forEach(item => {
                const row = document.createElement('div');
                row.className = 'slot';
                row.id = `slot-${item.year}`;
                row.innerHTML = `<span class="year-label">${item.year}</span> <span class="answer-area" id="text-${item.year}">é»æ“Šå°æ‡‰äº‹ä»¶...</span>`;
                timelineDiv.appendChild(row);
            });
        }

        function checkAnswer(item, element) {
            const target = data[currentIndex];
            const currentSlot = document.getElementById(`slot-${target.year}`);

            if (item.year === target.year) {
                // ç­”å°äº†
                document.getElementById(`text-${item.year}`).innerText = "âœ“ " + item.event;
                currentSlot.classList.add('correct');
                element.style.visibility = 'hidden';
                currentIndex++;

                if (currentIndex === data.length) {
                    setTimeout(() => alert("å¤ªæ£’äº†ï¼ä½ å®Œç¾æŒæ¡äº†é€™æ®µæ­·å²ï¼"), 300);
                }
            } else {
                // ç­”éŒ¯äº†
                currentSlot.classList.add('wrong-flash');
                setTimeout(() => currentSlot.classList.remove('wrong-flash'), 400);
            }
        }

        function resetGame() {
            initGame();
        }

        initGame();
    </script>
